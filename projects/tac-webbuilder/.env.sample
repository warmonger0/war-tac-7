# tac-webbuilder Environment Variables
# Copy this file to .env and fill in your actual values
# These variables override settings in config.yaml

# ============================================
# GitHub Configuration
# ============================================

# Full GitHub repository URL for posting issues
# Example: https://github.com/yourusername/tac-webbuilder
TWB_GITHUB_REPO_URL="https://github.com/owner/tac-webbuilder"

# GitHub Personal Access Token with repo permissions
# Get yours at: https://github.com/settings/tokens
# Required scopes: repo (full control of private repositories)
TWB_GITHUB_PAT="ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Default repository in 'owner/repo' format
TWB_GITHUB_DEFAULT_REPO="owner/tac-webbuilder"

# Automatically post generated issues to GitHub (true/false)
TWB_GITHUB_AUTO_POST="false"

# ============================================
# Anthropic Configuration
# ============================================

# Anthropic API Key for Claude
# Get yours at: https://console.anthropic.com/settings/keys
TWB_CLAUDE_API_KEY="sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Path to Claude Code CLI executable
# Find with: which claude
TWB_CLAUDE_CODE_PATH="/usr/local/bin/claude"

# ============================================
# ADW (AI Developer Workflow) Configuration
# ============================================

# Default workflow to use
# Options: adw_sdlc_iso, adw_sdlc_zte_iso, adw_plan_build_test_iso, etc.
TWB_ADW_DEFAULT_WORKFLOW="adw_sdlc_iso"

# Default model set (base, advanced, custom)
TWB_ADW_DEFAULT_MODEL_SET="base"

# ============================================
# Web Interface Configuration
# ============================================

# Enable web interface (true/false)
TWB_INTERFACES__WEB__ENABLED="true"

# Port for web interface
TWB_INTERFACES__WEB__PORT="5174"

# Host for web interface
TWB_INTERFACES__WEB__HOST="127.0.0.1"

# ============================================
# CLI Interface Configuration
# ============================================

# Enable CLI interface (true/false)
TWB_INTERFACES__CLI__ENABLED="true"
